					"name": "Suche Abteilung mit ID 1",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Statuscode 200', () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"pm.test('Content-Type application/json', () => {\r",
									"    const { response } = pm;\r",
									"    const contentType = response.headers.get('Content-Type');\r",
									"    pm.expect(contentType).to.match(/^application\\/json(; charset=utf-8)?/u);\r",
									"});\r",
									"pm.test('Body mit den Properties', () => {\r",
									"    const body = pm.response.json();\r",
									"    const { abteilung } = body.data;\r",
									"    const { bueroNummer, version, zufriedenheit, art, budget, verfuegbar, gruendungsDatum, homepage, schlagwoerter, abteilungsleiter } = abteilung;\r",
									"    pm.expect(bueroNummer).to.be.a('string');\r",
									"    pm.expect(version).to.be.a('number').that.is.gte(0);\r",
									"    pm.expect(zufriedenheit).to.be.a('number').that.is.gte(0);\r",
									"    pm.expect(art).to.be.a('string');\r",
									"    pm.expect(budget).to.be.a('number').that.is.gte(0);\r",
									"    pm.expect(verfuegbar).to.be.a('boolean');\r",
									"    pm.expect(gruendungsDatum).to.be.a('string');\r",
									"    pm.expect(homepage).to.be.a('string');\r",
									"    pm.expect(schlagwoerter).to.be.an('array');\r",
									"    pm.expect(abteilungsleiter.nachname).to.be.a('string');\r",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
