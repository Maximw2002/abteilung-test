' Preview durch <Alt>d

@startuml ER Diagramm

' hide the spot
hide circle

' evtl. Prbleme mit Kraehenfuessen vermeiden
skinparam linetype ortho

entity "Abteilung" {
  * id: integer <<generated>>
  --
  * version: integer
  * bueroNummer: text
  * zufriedenheit: number
  * art: text
  * budget: number
  * krankenstandsQuote: number
  * verfuegbar: boolean
    gruendungsDatum: date
    homepage: text
  * **abteilungsleiter_id**: integer <<FK>>
    schlagwoerter: text
  * erzeugt: timestamp
  * aktualisiert: timestamp
}

entity "Abteilungsleiter" {
  * id: integer <<generated>>
  --
  * abteilungsleiter: text
    vorname: text
}

entity "Mitarbeiter" {
  * id: integer <<generated>>
  --
  * name: text
    jobType: text
  * **abteilung_id**: integer <<FK>>
}

Abteilung ||..|| Abteilungsleiter
Abteilung ||..o{ Mitarbeiter

footer (c) JÃ¼rgen Zimmermann

@enduml
